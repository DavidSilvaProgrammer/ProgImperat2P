/*1) Faça um programa que receba dois números inteiros, calcule e mostre a subtração do primeiro número pelo segundo.*/

#include <stdio.h>
#include <stdlib.h>
#include <math.h>

int main() {
    int x=0,aux,i,result;
    for (i=1;i<=2;i++){
    printf("Informe o numero %d da operacao de subtracao:\n",i);
    scanf("%d",&x);
    if(i==1){
        aux=x;
    }else{
        result=aux-x;
    }
}
printf("Resultado: %d - %d = %d",aux, x, result);
    return 0;
}
