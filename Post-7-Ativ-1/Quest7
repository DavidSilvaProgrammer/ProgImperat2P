/*7) Faça um programa que receba o valor dos catetos de um triângulo, calcule e mostre o valor da hipotenusa.*/

#include <stdio.h>
#include <stdlib.h>
#include <math.h>

int main() {
    float cateto_menor,cateto_maior,hipot_quad,hipotenusa;
    printf("Digite o valor do cateto oposto (cateto menor) \ne do cateto adjacente(cateto maior):\n");
    scanf("%f %f",&cateto_menor,&cateto_maior);
    hipot_quad=pow(cateto_menor,2)+pow(cateto_maior,2);
    hipotenusa=sqrt(hipot_quad);
    printf("Cateto menor: %0.2f\nCateto maior: %0.2f\nHipotenusa ao quadrado: %0.2f\nHipotenusa: %0.2f", cateto_menor,cateto_maior,hipot_quad,hipotenusa);
    
    return 0;
}
