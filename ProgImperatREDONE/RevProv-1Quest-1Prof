#include <stdio.h>
# define MAX 5
int main(){
	int vetor[MAX], inverso[MAX];
	int i, j;
	for(i=0; i<MAX; i++){
		printf("Informe um numero inteiro: ");
		scanf("%d", &vetor[i]);
	}
	
	for(i=0; i<MAX; i++){
		printf("%d ", vetor[i]);
	}
	printf("\n");
	for(i=MAX-1, j=0; i>=0; i--, j++){
		inverso[j] = vetor[i];
	}
	printf("\nVETOR INVERTIDO\n");
	for(i=0; i<MAX; i++){
		printf("%d ", inverso[i]);
	}
	printf("\n");
	
	
	return 0;
}
