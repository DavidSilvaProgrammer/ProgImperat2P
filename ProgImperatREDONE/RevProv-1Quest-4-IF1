#include <stdio.h>
#include <stdlib.h>
#include <math.h>

int main() {
    
int num, cont;

while(num!=0){

printf("\n\nDigite um numero para saber se eh primo:\n");
scanf("%d",&num);

if (num<=1){
    printf("Numero %d nao eh primo", num);
    }else{
    for(cont=2;cont<num;cont++){
        if(num%cont == 0){
            printf("Numero %d nao eh primo",num);
            break;
        }
        }
    if (cont == num){
        printf("Numero %d eh primo",num);
    }
    }
}

    return 0;
}
