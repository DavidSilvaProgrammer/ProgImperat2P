#include <stdio.h>
#include <stdlib.h>

int main() {
    int numero;
    
    do{
        printf("*************************************");
        printf("\nDigite 0 para encerrar o programa:\nDigite um valor para saber se eh par ou impar:\n");
        scanf("%i", &numero);
        /* Verifica se o resto da divisão por 2 é igual a zero.
        3/2=1.5
        4/2=2*/
        
        if(numero%2 == 0 && numero != 0){
            printf("\n O valor digitado eh par\n ");
        }else if (numero%2 != 0 && numero != 0){
            printf("\n O valor digitado eh impar\n ");
        }
    } while(numero!=0);
    if(numero==0){
        printf("Programa encerrado.");
    }
    
    return 0;
}
