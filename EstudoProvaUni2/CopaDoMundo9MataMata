#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#include <string.h>

typedef struct{
    char nome[20];
    int posicao_copa;
}Selecoes;

typedef struct{
    int golsfeitos, golstomados, saldodegols,pontos,somagols;
    int somasaldo, somatomados;
    char grupos[20];
    int posicao;
    int vaga;
    
}FaseGrupo;

typedef struct{
    int golsfeitos, golstomados;
    char classificados[20];
    int posicao;
    
}MataMata;



int main() {
    
