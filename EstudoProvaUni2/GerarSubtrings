#include <stdio.h>
#include <stdlib.h>
#include <string.h>

void imprimir(char vet[], int inicio, int fim, int tam){// 113
    int i;
    if(fim<tam){
        for(i=inicio;i<=fim;i++){
            printf("%c",vet[i]);
        }
        printf(",");
        imprimir(vet, inicio, fim +1,tam);
    }else if(inicio<fim){
        imprimir(vet,inicio+1,inicio+1,tam);
    }
}

int main() {
    char palavra[]={"abacate"};
    int tam=strlen(palavra);
    
    imprimir(palavra,0,0,tam);
    printf("\n");
    

    return 0;
}
