    srand(time(NULL));
    
    
    
    do{
        selecoes[i].posicao_copa=rand()%32;
        igual=0;
        for(j=0;j<i;j++){
            if(selecoes[j].posicao_copa==selecoes[i].posicao_copa){
                igual=1;
            }
        }
            if(igual==0){
                i++;
            }

            }while(i<32);
            
