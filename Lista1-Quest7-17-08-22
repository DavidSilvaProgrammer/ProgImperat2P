// Faça um programa que receba o valor dos catetos de um triângulo, calcule e mostre o valor da hipotenusa
#include <stdio.h>
#include <stdlib.h>
#include <math.h>

int main() {
float hipotenusa, n1,n2;

printf("Digite o valor do cateto menor: \n");
scanf("%f",&n1);
printf("Digite o valor do cateto maior: \n");
scanf("%f",&n2);
printf("**********\n");

float catetor_menor=pow(n1,2);
float catetor_maior=pow(n2,2);
hipotenusa=catetor_menor+catetor_maior;
printf("Resultado:\n\nValor do cateto menor: %0.2f\nValor do cateto maior: %0.2f\nValor da hipotenusa: %0.2f", catetor_menor,catetor_maior,hipotenusa);

    return 0;
}
