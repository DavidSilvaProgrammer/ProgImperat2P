#include <stdio.h>
#include <stdlib.h>

int main() {
/*Declarações das variaveis*/

float A[5][5];int B[20][20];
int i,j,k,x,y,z;float aux;char c;

/*Formação da matriz 20x20*/
for(i=k=0;i<20;i++){
    for(j=0;j<20;j++){
        B[i][j]=++k;
    }
}

printf("Impressao da matriz B:\n");
for(i=k=0;i<20;i++){
    for(j=0;j<20;j++){
        printf("%4d",B[i][j]);
    }
}

/*Sintetização da Matriz B na matriz A*/

for (i=0;i<5;i++){
    for(j=0;j<5;j++){
        aux=0;
        for(x=4*i;x<=4*i+3;x++){
            for(y=4*j;y<=4*j+3;y++){
                aux+=B[x][y];
            }
        }
        A[i][j]=aux/16;
    }
}
printf("\n\n");
printf("\nImpressao da matriz A:\n");

for(i=0;i<5;i++){
    printf("\n");
    for(j=0;j<5;j++){
        printf("%8.2f",A[i][j]);
    }
}




    return 0;
}
